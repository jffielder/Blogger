<h1>Articles Tagged with <%= @tag.name %></h1>

<ul>
	<% @tag.articles.each do |article| %>
		<li><%= link_to article.title, article_path(article) %></li>
	<% end %>
</ul>
<br />
<p><%= link_to "delete tag", tag_path(@tag), method: :delete, data: {confirm: "Really delete the tag?"} %></p>
<h3><%= link_to 'All Tags', tags_path() %></h3>